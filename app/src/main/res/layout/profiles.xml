<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_above="@id/member_recyclerView"
        android:background="@drawable/arrow_back"
        android:layout_gravity="left"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <EditText
                android:id="@+id/profile_Name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="23sp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/profile_Surname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textAlignment="center"
                android:background="@color/white"
                android:text="Surname"
                android:textSize="23sp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/profile_Email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:text="Email"
                android:textSize="23sp"
                android:layout_marginTop="30dp"/>

            <EditText
                android:id="@+id/church"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:text="Church"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/church_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Church ID"
                android:textAlignment="center"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/center_size"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Center Size"
                android:textAlignment="center"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Country"
                android:textAlignment="center"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Phone Number"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <EditText
                android:id="@+id/workship_name"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:background="@color/white"
                android:text="Workship Name"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />


            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#FDA941"/>

            <Button
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FDA941"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
