<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/arrow_back"
        android:layout_gravity="left" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Secretary"
        android:textStyle="bold"
        android:textSize="35sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_sec_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:gravity="center"
            android:background="@drawable/cardview_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name"
                android:textSize="23sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surname:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_surname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="surname"
                android:textSize="23sp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="email"
                android:textSize="23sp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Church ID:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/sec_church_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="church id"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Church Name:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_church_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="church name"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_date"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="date"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                android:textStyle="bold"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/sec_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="number"
                android:inputType="phone"
                android:textSize="23sp"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/save_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#43AAFA"/>

        </LinearLayout>

    </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>